      <input type="radio" token="ethinicity_math">
        <label></label>
        <change>
          <condition value="ethinicity_math">
            <set token="search_string2">stats avg("math score") as avg_math_score by race_ethnicity</set>
            <unset token="ethinicity_all"></unset>
